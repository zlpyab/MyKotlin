<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_ffffff"
    android:paddingTop="@dimen/space10"
    android:layout_marginBottom="@dimen/space10"
    android:elevation="@dimen/space1">

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_top"
        android:textSize="@dimen/font12"
        android:layout_marginStart="@dimen/space8"
        app:layout_goneMarginStart="@dimen/space16"
        android:textColor="@color/color_0a5273"
        tools:text="学习"
        />

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_f44336"
        android:textSize="@dimen/font13"
        android:layout_marginStart="@dimen/space16"
        android:visibility="visible"
        android:text="@string/is_top"
        android:layout_marginEnd="@dimen/space16"
        app:layout_constraintEnd_toStartOf="@+id/tv_author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_author"
        app:layout_constraintBottom_toBottomOf="@+id/tv_author"
        />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font10"
        android:textColor="@color/color_0a5273"
        android:layout_marginStart="@dimen/space12"
        android:text="本站发布"
        android:background="@drawable/shape_tag_bg"
        app:layout_constraintStart_toEndOf="@+id/tv_author"
        app:layout_constraintTop_toTopOf="@+id/tv_author"
        app:layout_constraintBottom_toBottomOf="@+id/tv_author"
        />

    <TextView
        android:id="@+id/tv_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_979797"
        android:textSize="@dimen/font12"
        android:layout_marginEnd="@dimen/space16"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/tv_author"
        app:layout_constraintBottom_toBottomOf="@+id/tv_author"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="内推"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/space0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space12"
        android:layout_marginStart="@dimen/space16"
        android:layout_marginEnd="@dimen/space16"
        android:textSize="@dimen/font14"
        android:textColor="@color/color_0a5273"
        android:fontFamily="sans-serif-medium"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/tv_author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="终于来了"
        />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="@dimen/space0"
        android:layout_height="wrap_content"
        android:textColor="@color/color_979797"
        android:textSize="@dimen/font13"
        android:maxLines="3"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/space2"
        android:layout_marginTop="@dimen/space10"
        android:layout_marginStart="@dimen/space16"
        android:layout_marginEnd="@dimen/space16"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="圣圣湖圣湖圣湖圣湖圣湖圣湖圣湖圣湖圣湖圣湖圣湖圣湖圣湖圣湖圣湖圣湖湖"
        />

     <TextView
         android:id="@+id/tv_new"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/new_article"
         android:textSize="@dimen/font12"
         android:textColor="@color/color_f44336"
         android:layout_marginStart="@dimen/space16"
         android:layout_marginRight="@dimen/space12"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/tv_des"
         app:layout_constraintTop_toTopOf="@id/tv_time"
         app:layout_constraintBottom_toBottomOf="@id/tv_time"
         />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_9297a2"
        android:textSize="@dimen/font12"
        android:text="2020-08-12"
        android:layout_marginStart="@dimen/space10"
        android:layout_marginTop="@dimen/space10"
        app:layout_goneMarginStart="@dimen/space16"
        app:layout_constraintStart_toEndOf="@+id/tv_new"
        app:layout_constraintTop_toBottomOf="@+id/tv_des"

        />

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="10dp"
        android:background="?actionBarItemBackground"
        android:padding="6dp"
        android:tint="@color/color_979797"
        android:src="@drawable/selector_collect"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_des"
        app:layout_constraintTop_toTopOf="@+id/tv_time" />

</androidx.constraintlayout.widget.ConstraintLayout>
